<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_checkout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emma.orderitapp.Checkout">


    <TextView
        android:text="Checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Customer:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="17dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="Customer Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_label"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Customer Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_label"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/name_label"
        android:layout_alignParentStart="true" />




    <TextView
        android:text="Restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="Restaurant Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="11dp"
        android:id="@+id/rest_name" />

    <TextView
        android:text="Restaurant Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/rest_email" />





    <Button
        android:text="Email Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="sendOrder"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/name_label" />
</RelativeLayout>
