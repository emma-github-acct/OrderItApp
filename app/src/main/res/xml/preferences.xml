<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="customer_preferences"
        android:title="Customer Preferences">
        <EditTextPreference
            android:defaultValue="Jane Doe"
            android:inputType="text"
            android:key="name_preference"
            android:title="Customer Name" />

        <EditTextPreference
            android:defaultValue="jDoe@gmail.com"
            android:inputType="text"
            android:key="email_preference"
            android:title="Customer Email" />
        <EditTextPreference
            android:defaultValue="123 oak st."
            android:inputType="text"
            android:key="address_preference"
            android:title="Customer Address" />

        <EditTextPreference
            android:defaultValue="111-1234"
            android:inputType="text"
            android:key="phone_preference"
            android:title="Customer Phone" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="allergy_preference"
            android:summary="Do you have allergies?"
            android:title="Allergy" />
    </PreferenceCategory>

</PreferenceScreen>
