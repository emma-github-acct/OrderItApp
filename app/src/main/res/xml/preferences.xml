<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="customer_preferences"
        android:title="Customer Preferences">
        <EditTextPreference
            android:defaultValue="@string/default_name"
            android:inputType="text"
            android:key="name_preference"
            android:title="Customer Name" />

        <EditTextPreference
            android:defaultValue="@string/default_email"
            android:inputType="text"
            android:key="email_preference"
            android:title="Customer Email" />
        <EditTextPreference
            android:defaultValue="@string/default_address"
            android:inputType="text"
            android:key="address_preference"
            android:title="Customer Address" />

        <EditTextPreference
            android:defaultValue="@string/default_phone_number"
            android:inputType="text"
            android:key="phone_preference"
            android:title="Customer Phone Number" />

    </PreferenceCategory>

</PreferenceScreen>
